{
  "manifest_version": 3,
  "name": "UK Data & AI Job Assistant",
  "version": "1.0.0",
  "description": "Analyse job descriptions and generate tailored CV bullet points and cover notes for UK data & AI roles.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "UK Job Assistant"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.indeed.co.uk/*",
    "https://*.indeed.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.indeed.co.uk/*",
        "https://*.indeed.com/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}